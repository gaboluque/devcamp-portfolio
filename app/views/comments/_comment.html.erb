<div class="comment-card">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-1">
          <%= gravatar_helper comment.user %>
        </div>
        <div class="col-md-11">
          <div class="content">
            <%= comment.content %>
          </div>
          <hr>
          <div class="user-info">
            <i class="text-muted mb-0 mt-3">
              Comment posted by <b><%= comment.user.name %></b> <%= distance_of_time_in_words(comment.created_at, Time.now) %>
            </i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>