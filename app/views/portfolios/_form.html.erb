<%= form_for(@portfolio_item) do |f| %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: "form-control" %>
      </div>
      <div class="form-group mb-2 mt-2">
        <%= f.file_field :main_image %>
      </div>
      <div class="form-group mb-2">
        <%= f.file_field :thumb_image %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", rows: 8 %>
      </div>
    </div>
  </div>

  <hr>

  <h3>Technologies used</h3>
  <ul>
    <%= f.fields_for :technologies do |technology_form| %>
      <li class="form-group"> 
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name, class: "form-control" %>
      </li>
    <% end %>
  </ul>

  <div class="actions row justify-content-end">
    <div class="col-md-4">
      <%= f.submit "Submit", class: "btn btn-primary w-100" %>
    </div>
  </div>
<% end %>
