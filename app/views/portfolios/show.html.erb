<div class="container p-5">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image, width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1> <%= @portfolio_item.title %> </h1>
      <hr>
      <em> <%= @portfolio_item.subtitle %> </em>
      <p> <%= @portfolio_item.body %> </p>
      <hr>

      <h3>Technologies used</h3>
      <ul>
        <% @portfolio_item.technologies.each do |t| %>
          <li><%= t.name %></li>
        <% end %>
      </ul>
      <%= link_to 'View all portfolio items', portfolios_path %>
    </div>
  </div>
</div>
