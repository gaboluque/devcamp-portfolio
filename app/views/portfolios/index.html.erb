<h1>Porfolio items</h1>
<%= link_to "New portfolio item", new_portfolio_path %>
<% @portfolio_items.each do |item| %>
  <p><%= link_to item.title, portfolio_path(item) %> </p>
  <p><%= item.subtitle %> </p>
  <p><%= item.body %> </p>
  <%= image_tag item.thumb_image %>
  <%= link_to "Edit", edit_portfolio_path(item) %>
  <%= link_to 'Delete', portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>
