<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", rows: 15 %>
  </div>

  <div class="row justify-content-center mb-3 mt-3">
    <div class="col-5">
      <%= link_to 'Back', blogs_path, class: "btn btn-link" %>
    </div>
    <div class="actions col-7 text-center">
      <%= f.submit "Submit", class: "btn btn-primary w-100" %>
    </div>
  </div>
<% end %>
